<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvHeader"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="17sp"
            android:textColor="@color/black"
            android:fontFamily="@font/roboto_regular"
            android:layout_marginStart="15dp"
            android:layout_marginVertical="15dp"
            android:layout_centerHorizontal="true"
            android:text="Rate Your Last Food Order" />
        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/ivClose"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:padding="6dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="20dp"
            app:srcCompat="@drawable/close"
            android:background="@drawable/circular_solid_background"
            android:backgroundTint="@color/white"
            android:layout_alignParentEnd="true"
            />
    </RelativeLayout>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/rvSelectMeal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="20dp"
        android:layout_marginTop="8dp"
        android:layout_marginHorizontal="15dp"
        android:paddingHorizontal="5dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/rounded_corner"
        android:backgroundTint="@color/white"
        android:visibility="visible"
        android:orientation="vertical"
        >
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvItem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:ellipsize="end"
            android:maxLines="1"
            android:fontFamily="@font/roboto_regular"
            android:layout_marginStart="10dp"
            android:layout_marginVertical="10dp"
            android:text="1.Roti , Dal , Punjabi Kadhi Pakoda Salad" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvItem2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:textStyle="bold"
            android:ellipsize="end"
            android:maxLines="1"
            android:textColor="@color/black"
            android:fontFamily="@font/roboto_regular"
            android:layout_marginStart="10dp"
            android:layout_marginVertical="10dp"
            android:visibility="gone"
            android:text="2.Full Rice , Dal Makhnin , Salad " />

        <com.hsalf.smileyrating.SmileyRating
            android:id="@+id/smile_rating"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            />


        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvAddReview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="@color/black"
            android:fontFamily="@font/roboto_regular"
            android:layout_marginStart="10dp"
            android:layout_marginTop="45dp"
            android:layout_marginBottom="20dp"
            android:text="Please specify in detail " />

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/etFeedback"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:background="@drawable/rounded_coloured_corner"
            android:gravity="start"
            android:padding="10dp"
            android:layout_marginHorizontal="10dp"
            />
        <ProgressBar
            android:id="@+id/progress_bar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:visibility="gone"
            />
    </androidx.appcompat.widget.LinearLayoutCompat>
    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvSubmitFeedback"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:text=" Submit Feedback "
        android:gravity="center"
        android:layout_marginHorizontal="30dp"
        android:textStyle="bold"
        android:paddingHorizontal="30dp"
        android:textColor="@color/white"
        android:background="@drawable/red_button_background"
        android:backgroundTint="@color/colorPrimary"
        android:textSize="18sp"
        android:paddingVertical="8dp"
        android:layout_marginBottom="20dp"
        />
</androidx.appcompat.widget.LinearLayoutCompat>
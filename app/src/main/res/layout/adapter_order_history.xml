<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/white"
    android:layout_marginHorizontal="24dp"
    android:layout_marginBottom="30dp"
    app:cardCornerRadius="3dp"
    app:cardElevation="12dp">
    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/indicator"
            android:layout_width="7dp"
            android:layout_height="7dp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="20dp"
            android:gravity="center_vertical"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="10dp"
            android:background="@drawable/circular_solid_background"
            />
            <TextView
                android:id="@+id/tvOrderNoHeader"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Order no. "
                android:textSize="17sp"
                android:fontFamily="@font/roboto_regular"
                android:layout_marginStart="5dp"
                android:layout_marginTop="15dp"
                android:textColor="@color/black"
                />
            <TextView
                android:id="@+id/order_no"
                android:layout_toEndOf="@+id/tvOrderNoHeader"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="#542387"
                android:textSize="17sp"
                android:fontFamily="@font/roboto_regular"
                android:layout_marginStart="5dp"
                android:layout_marginTop="15dp"
                android:textColor="@color/black"
                />

            <TextView
                android:id="@+id/tvOrderDateHeader"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Order date - "
                android:layout_below="@+id/order_no"
                android:layout_marginTop="5dp"
                android:layout_marginStart="5dp"
                android:textColor="@color/sky_grey"
                android:fontFamily="@font/roboto_regular"
                />
            <TextView
                android:id="@+id/orderDate"
                android:layout_toEndOf="@+id/tvOrderDateHeader"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/order_no"
                android:layout_marginTop="5dp"
                android:layout_marginStart="5dp"
                android:textColor="@color/sky_grey"
                android:fontFamily="@font/roboto_regular"
                tools:text="28 may,2018"
                />
        <TextView
            android:id="@+id/tvAmountPaidHeader"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Amount paid - "
            android:layout_below="@+id/orderDate"
            android:layout_marginTop="5dp"
            android:layout_marginStart="5dp"
            android:textColor="@color/sky_grey"
            android:fontFamily="@font/roboto_regular"
            />
        <TextView
            android:id="@+id/tvAmountPaid"
            android:layout_toEndOf="@+id/tvAmountPaidHeader"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Rs 200"
            android:layout_below="@+id/orderDate"
            android:layout_marginTop="5dp"
            android:layout_marginStart="5dp"
            android:textColor="@color/sky_grey"
            android:fontFamily="@font/roboto_regular"
            />
        </RelativeLayout>

    </androidx.cardview.widget.CardView>
